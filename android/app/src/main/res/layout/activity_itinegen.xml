<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Generate Your Itinerary!"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generating this number of items:"
        android:textSize="16dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/numItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Museums"
            android:textSize="16dp"/>

        <SeekBar
            android:id="@+id/slider1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:max="9"
            android:progress="4" />

        <TextView
            android:id="@+id/display1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:text="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:textSize="16dp"/>

        <SeekBar
            android:id="@+id/slider2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:max="9"
            android:progress="4" />

        <TextView
            android:id="@+id/display2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:text="5" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Food"
            android:textSize="16dp" />

        <SeekBar
            android:id="@+id/slider3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:max="9"
            android:progress="4" />

        <TextView
            android:id="@+id/display3"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:text="5" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Sightseeing"
            android:textSize="16dp"/>

        <SeekBar
            android:id="@+id/slider4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:max="9"
            android:progress="4" />

        <TextView
            android:id="@+id/display4"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:text="5" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Nightlife"
            android:textSize="16dp"/>

        <SeekBar
            android:id="@+id/slider5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.25"
            android:max="9"
            android:progress="4" />

        <TextView
            android:id="@+id/display5"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="end"
            android:text="5" />

    </LinearLayout>

    <Button
        android:id="@+id/submitGen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Submit" />

</LinearLayout>